$group
  $params &md
  
  $
    var count = [0,1,2,3,4,5];
    var sizes = ['s','m','l','x','xl','xxl'];
    var scale = ['0.6','0.8','1','1.3','1.6','2'];
    //

  $foreach c in count
    . font-${sizes[c]}
      font-size ${scale[c]}em

  . font-weight-s
      font-weight 300
  . font-weight-m
      font-weight 300
  . font-weight-l
      font-weight 500
  . font-weight-x
      font-weight 500
  . font-weight-xl
      font-weight 700
  . font-weight-xxl
      font-weight 700